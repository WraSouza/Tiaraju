<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="Tiaraju.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Tiaraju.Views"
    Title="Laboratório Tiarajú"
    FlyoutBackgroundColor="Green"
    Shell.BackgroundColor="#0E7B35"
    Shell.ForegroundColor="White"
    Shell.TabBarForegroundColor="Green"
    Shell.TabBarTitleColor="Green">


    <TabBar>
        <Tab Title="Início" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:MainView}" />
        </Tab>

        <Tab Title="Setores" Icon="structure.png">
            <ShellContent ContentTemplate="{DataTemplate views:DepartmentsView}" />
        </Tab>
    </TabBar>

</Shell>