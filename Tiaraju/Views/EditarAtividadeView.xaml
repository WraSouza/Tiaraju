<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tiaraju.Views.EditarAtividadeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvvm="clr-namespace:Tiaraju.ViewModels"
    Title="Editar Atividade">
    <ContentPage.BindingContext>
        <mvvm:EditarAtividadeViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid>
            <Image
                HeightRequest="100"
                HorizontalOptions="Center"
                Opacity="0.1"
                Source="logotiaraju.png"
                VerticalOptions="Center" />
            <VerticalStackLayout Padding="10" Spacing="10">
                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="Medium"
                    Text="Projeto"
                    TextColor="Green" />

                <Label
                    FontFamily="OpenSansRegular"
                    FontSize="Medium"
                    IsEnabled="False"
                    Text="{Binding Projectname}"
                    TextColor="Gray" />

                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="Medium"
                    Text="Atividade"
                    TextColor="Green" />

                <Entry
                    FontFamily="OpenSansRegular"
                    FontSize="Medium"
                    Text="{Binding Activityname}"
                    TextColor="Black" />

                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="Medium"
                    Text="Data Final"
                    TextColor="Green" />

                <Border
                    HeightRequest="50"
                    Opacity="0.8"
                    StrokeShape="RoundRectangle 10,10,10,10">
                    <DatePicker
                        x:Name="datePicker"
                        Date="{Binding FinalDate}"
                        FontFamily="OpenSansRegular"
                        FontSize="Medium"
                        HorizontalOptions="Start">
                        <DatePicker.Format>dd-MMMM-yyyy</DatePicker.Format>
                    </DatePicker>
                </Border>

                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="Medium"
                    Text="Setor Responsável"
                    TextColor="Green" />

                <Picker
                    FontFamily="OpenSansRegular"
                    FontSize="Medium"
                    ItemDisplayBinding="{Binding DepartmentAcronym}"
                    ItemsSource="{Binding Departments}"
                    SelectedItem="{Binding Ownerdepartment}" />

                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="Medium"
                    Text="Setor Envolvido"
                    TextColor="Green" />


                <Picker
                    FontFamily="OpenSansRegular"
                    FontSize="Medium"
                    ItemDisplayBinding="{Binding DepartmentAcronym}"
                    ItemsSource="{Binding Departments}"
                    SelectedItem="{Binding Setores}" />

                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="Medium"
                    Text="Prioridade"
                    TextColor="Green" />

                <Picker
                    x:Name="picker"
                    FontFamily="OpenSansRegular"
                    FontSize="Medium"
                    SelectedItem="{Binding Priority}">

                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Alta</x:String>
                            <x:String>Média</x:String>
                            <x:String>Baixa</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>               

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*">
                    <Button
                        Grid.Column="0"
                        Margin="10,80,10,0"
                        BackgroundColor="Green"
                        Command="{Binding AtualizarAtividadeCommand}"
                        FontFamily="OpenSansRegular"
                        Text="Atualizar"
                        TextColor="White"
                        VerticalOptions="End" />

                    <Button
                        Grid.Column="1"
                        Margin="10,80,10,0"
                        BackgroundColor="Red"
                        Command="{Binding ExcluirAtividadeCommand}"
                        FontFamily="OpenSansRegular"
                        Text="Excluir"
                        TextColor="White"
                        VerticalOptions="End" />

                    <Button
                        Grid.Column="0"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="10,20,10,0"
                        BackgroundColor="Blue"
                        Command="{Binding EncerrarAtividadeCommand}"
                        FontFamily="OpenSansRegular"
                        Text="Encerrar"
                        TextColor="White"
                        VerticalOptions="End" />

                </Grid>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>