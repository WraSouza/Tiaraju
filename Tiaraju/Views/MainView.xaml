<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tiaraju.Views.MainView"
             Shell.BackgroundColor="Green"
             xmlns:mvvm="clr-namespace:Tiaraju.ViewModels"
             Title="Início">

    <ContentPage.BindingContext>
        <mvvm:MainViewModel/>
    </ContentPage.BindingContext>
    <Grid>
        <Image Source="logotiaraju.png"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Opacity="0.3"
               HeightRequest="100"/>
        
        <VerticalStackLayout Padding="10">

            <Grid ColumnDefinitions="*,*"
                  RowSpacing="10"
                  RowDefinitions="80,80,80,80"
                  Margin="0,30,0,0">

                <Image Source="cardapio.jpeg"
                       Grid.Column="0"
                       Grid.Row="0"/>

                <Image Source="bonustiarajuimagem.jpg"
                       Grid.Column="1"
                       Grid.Row="0"/>

                <Label Text="Cardápio"
                       FontFamily="OpenSansSemibold"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center"
                       Grid.Column="0"
                       Grid.Row="1"/>

                <Label Text="Bônus"
                       FontFamily="OpenSansSemibold"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center"
                       Grid.Column="1"
                       Grid.Row="1"/>

                <Image Source="diat.png"
                       Grid.Column="0"
                       Grid.Row="2"/>

                <Label Text="Dia T"
                       FontFamily="OpenSansSemibold"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center"
                       Grid.Column="0"
                       Grid.Row="3"/>
            </Grid>
        </VerticalStackLayout>
    </Grid>
