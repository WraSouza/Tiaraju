    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CadastroCalendarioCQView">

    <Grid>

        <VerticalStackLayout Margin="10,20,10,0" Spacing="5">
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="20"
                Text="Cadastro de Atividade"
                TextColor="#20B2AA" />

            <Label
                Margin="0,10,0,0"
                FontFamily="OpenSansSemibold"
                FontSize="20"
                Text="TÃ­tulo"
                TextColor="#20B2AA" />

            <Entry BackgroundColor="#D9D9D9" FontFamily="OpenSansRegular" />

            <Label
                Margin="0,10,0,0"
                FontFamily="OpenSansSemibold"
                FontSize="20"
                Text="Data da Atividade"
                TextColor="#20B2AA" />

            <DatePicker x:Name="datePicker" Date="{Binding DataColeta}" BackgroundColor="#D9D9D9">
                <DatePicker.Format>dd-MMMM-yyyy</DatePicker.Format>
            </DatePicker>
        </VerticalStackLayout>

    </Grid>
</ContentPage>